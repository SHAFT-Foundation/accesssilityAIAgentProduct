{
  "name": "api",
  "version": "1.0.0",
  "description": "Accessibility Scanner API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=junit --outputFile=test-results.xml",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate reset --force",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sentry/node": "^7.86.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "express-session": "^1.18.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "octokit": "^3.1.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.7.0",
    "puppeteer": "^21.6.0",
    "puppeteer-core": "^21.6.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.55.0",
    "@octokit/rest": "^22.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.0",
    "ioredis": "^5.6.1",
    "openai": "^5.8.2",
    "passport-github2": "^0.1.12",
    "supertest": "^6.3.4",
    "testcontainers": "^10.28.0",
    "tsx": "^4.6.2",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "vitest-mock-extended": "^1.3.1"
  }
}
